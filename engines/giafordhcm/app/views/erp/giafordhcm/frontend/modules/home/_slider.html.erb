<!-- Banner start -->
<div class="banner banner-3">
    <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
            <% @sliders.each_with_index do |slider,index| %>
            <div class="item banner-max-height <%= 'active' if index == 0 %>">
                <img src="<%= slider.image_url %>" alt="banner-slider-1">
                <div class="carousel-caption banner-slider-inner">
                    <div class="banner-content container">
                        <div class="text-left">
                            <div class="banner-box">
                                <h1 data-animation="animated fadeInDown delay-05s"><span><%= slider.name %></span></h1>
                                <% if slider.note.present? %>
                                    <p data-animation="animated fadeInUp delay-1s"><%= slider.note %></p>
                                <% end %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <% end %>
        </div>

        <!-- Controls -->
        <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
            <span class="slider-mover-left" aria-hidden="true">
                <i class="fa fa-angle-left"></i>
            </span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
            <span class="slider-mover-right" aria-hidden="true">
                <i class="fa fa-angle-right"></i>
            </span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
<!-- Banner end -->
<% if false %>
<div class="main-slider main-slider-1">
    <div class="slider-pro" id="main-slider"
        data-slider-width="100%"
        data-slider-height="700px"
        data-slider-arrows="true"
        data-slider-buttons="false"
    >
        
        <div class="sp-slides">
            <% @sliders.each_with_index do |slider,index| %>
                <div class="sp-slide">
                    <img class="sp-image" src="<%= slider.image_url %>" alt="slider" />
                    <div class="main-slider__wrap sp-layer"
                        data-width="60%"
                        data-position="centerLeft"
                        data-horizontal="20%"
                        data-show-transition="left"
                        data-hide-transition="left"
                        data-show-duration="2000"
                        data-show-delay="1200"
                        data-hide-delay="400"
                    >
                        <div class="main-slider__title"><%= slider.name %>
                            <!--<span class="main-slider__label bg-primary">model 2019</span>-->
                        </div>
                        <% if slider.note.present? %>
                            <div class="main-slider__subtitle"><%= slider.note %></div>
                        <% end %>
                        <a class="main-slider__btn btn btn-white btn-lg dang-ky-button" href="<%= erp_giafordhcm.registration_form_path(type: 'quote') %>">
                            Yêu cầu báo giá
                        </a>
                        <a class="main-slider__btn btn btn-standard btn-lg dang-ky-button" href="<%= erp_giafordhcm.registration_form_path(type: 'test_drive') %>">
                            Đăng ký lái thử
                        </a>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>
<!-- end .main-slider-->
<% end %>