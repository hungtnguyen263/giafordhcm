<div class="section-title-page area-bg area-bg_dark area-bg_op_70">
    <div class="area-bg__inner">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <h1 class="b-title-page bg-primary_a"><%= @menu.name %></h1>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end .b-title-page-->
<div class="bg-grey">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <ol class="breadcrumb">
                    <li><a href="<%= erp_giafordhcm.root_path %>"><i class="icon fa fa-home"></i></a>
                    </li>
                    <li><a href="<%= erp_giafordhcm.all_product_path %>">Sản phẩm</a>
                    </li>
                    <li class="active"><%= @menu.name %></li>
                </ol>
            </div>
        </div>
    </div>
</div>
<!-- end breadcrumb-->
<section class="section-default">
    <div class="container">
        <div class="row">
            <div class="col-md-9">
                <div class="filter-goods">
                    <div class="filter-goods__page">
                        <%= page_entries_info @products %>
                    </div>
                    <div class="filter-goods__info">
                        <h2><%= @menu.name %></h2>
                    </div>
                </div>
                <!-- end .filter-goods-->
                
                <div class="goods-group wrap-inl-block">
                    <div class="row">
                        <% @products.each do |product| %>
                            <div class="col-md-4 col-sm-6">
                                <div class="b-goods-ac">
                                    <div class="b-goods-ac__wrap">
                                        <div class="b-goods-ac__img">
                                            <!--560x350-->
                                            <%= link_to image_tag(product_image(product.product_images, 'first', 'thumb560x350'), alt: product.product_name, class: "img-responsive img-fullwidth"),
                                                        product_link(product), title: product.product_name %>
                                        </div>
                                        <div class="b-goods-ac__inner">
                                            <div class="b-goods-ac__info">
                                                <a href="<%= product_link(product) %>">
                                                    <div class="b-goods-ac__name"><%= product.name %></div>
                                                </a>
                                            </div>
                                            <div class="b-goods-ac__price">Giá tham khảo: <span><%= format_price(product.price) %></span><sup></sup></div>
                                            <div class="b-goods-ac__price discount">Liên hệ: <span>0905 250 593</span> để nhận giá ưu đãi trong tháng</div>
                                        </div>
                                    </div>
                                </div>
                                <!-- end .b-goods-access-->
                            </div>
                        <% end %>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <%= render "erp/giafordhcm/frontend/modules/contact_info_boxes" %>
            </div>
        </div>
    </div>
</section>