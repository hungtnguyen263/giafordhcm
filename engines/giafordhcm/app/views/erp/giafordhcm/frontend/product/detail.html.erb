<div class="section-title-page area-bg area-bg_dark area-bg_op_70">
    <div class="area-bg__inner">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <h1 class="b-title-page bg-primary_a"><%= @product.name %></h1>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end .b-title-page-->

<div class="bg-grey">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <ol class="breadcrumb">
                    <li><a href="<%= erp_giafordhcm.root_path %>"><i class="icon fa fa-home"></i></a></li>
                    <li><a href="<%= erp_giafordhcm.all_product_path %>">Sản phẩm</a></li>
                    <li><a href="<%= menu_link(@menu) %>"><%= @menu.name %></a></li>
                    <li class="active"><%= @product.name %></li>
                </ol>
            </div>
        </div>
    </div>
</div>
<!-- end breadcrumb-->

<main class="section-default">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <section class="b-car-details">
                    <div class="b-car-details__header">
                        <h2 class="b-car-details__title"><%= @product.name %></h2>
                        <div class="b-car-details__subtitle"></div>
                        <div class="b-car-details__share-links">
                            <a class="b-car-details__share-link" href="#">
                                <i class="icon fa fa-facebook-square text-primary"></i> Share to Facebook
                            </a>
                            <a class="b-car-details__share-link" href="#">
                                <i class="icon fa fa-google-plus-square text-primary"></i> Share to Google+
                            </a>
                            <a class="b-car-details__share-link" href="#s">
                                <i class="icon fa fa-twitter-square text-primary"></i> Share to Twitter
                            </a>
                        </div>
                    </div>
                    <div class="slider-car-details slider-pro" id="slider-car-details">
                        <% product_images = @product.product_images %>
                        <% if product_images.count > 1 %>
                            <div class="sp-slides">
                                <% product_images.each_with_index do |product_image,index| %>
                                    <div class="sp-slide">
                                        <img class="sp-image" src="<%= product_image.image_url.thumb750x400 %>" alt="<%= @product.name %>" />
                                    </div>
                                <% end %>
                                <% if false %>
                                    <div class="sp-slide">
                                        <iframe class="sp-video" src="https://www.youtube.com/embed/AAfLTYZKFTc" allowfullscreen="allowfullscreen"></iframe>
                                    </div>
                                <% end %>
                            </div>
                        <% elsif product_images.count == 1 %>
                            <img class="sp-image" src="<%= @product.main_image.image_url.thumb750x400 %>" alt="<%= @product.name %>" />
                        <% end %>
                        
                        <% if product_images.count > 1 %>
                            <div class="sp-thumbnails">
                                <% product_images.each_with_index do |product_image,index| %>
                                    <div class="sp-thumbnail">
                                        <img class="img-responsive" src="<%= product_image.image_url.thumb140x85 %>" alt="<%= @product.name %>" />
                                    </div>
                                <% end %>
                            </div>
                        <% end %>
                    </div>
                    <!-- end .b-thumb-slider-->
                    <div class="b-car-details__section">
                        <h3 class="b-car-details__section-title ui-title-inner">Mô tả chi tiết</h3>
                        <%= @product.description.html_safe if @product.description.present? %>
                    </div>
                    <%= render "erp/giafordhcm/frontend/modules/product/detail_nar_tabs" if false %>
                </section>
            </div>
            <div class="col-md-4">
                <aside class="">
                    <div class="b-car-info">
                        <div class="b-car-info__price"><div>Giá chỉ từ: </div><%= format_number(@product.price) %><span class="b-car-info__price-unit">VNĐ</span>
                        </div>
                        <% if false %>
                        <dl class="b-car-info__desc dl-horizontal bg-grey">
                            <dt class="b-car-info__desc-dt">Kiểu dáng</dt>
                            <dd class="b-car-info__desc-dd">sedan</dd>
                            <dt class="b-car-info__desc-dt">Động cơ</dt>
                            <dd class="b-car-info__desc-dd">2016</dd>
                            <dt class="b-car-info__desc-dt">Hộp số</dt>
                            <dd class="b-car-info__desc-dd">20,300mi</dd>
                            <dt class="b-car-info__desc-dt">Công suất cực đại</dt>
                            <dd class="b-car-info__desc-dd">5.7L V8</dd>
                            <dt class="b-car-info__desc-dt">Mô men xoắn cực đại</dt>
                            <dd class="b-car-info__desc-dd">Auto 8-Speed</dd>
                            <dt class="b-car-info__desc-dt">Dài x Rộng x Cao</dt>
                            <dd class="b-car-info__desc-dd">hybird</dd>
                        </dl>
                        <% end %>
                        
                        <div class="sidebar">
                            <div class="contact-info">
                                <div class="business-man__img">
                                    <img src="/frontend/assets/media/components/b-blockquote/mrtuong.jpg" width="200px" alt="" />
                                </div>
                                <blockquote>
                                    <cite class="b-blockquote__cite" title="Blockquote Title">
                                        <span class="b-blockquote__author">Mr. Tường Nguyễn</span>
                                        <span class="b-blockquote__category">Chuyên viên Kinh doanh</span>
                                        <a href="tel:090 525 0593">
                                            <span class="b-blockquote__hotline">
                                                <i class="flaticon-smartphone"></i> 090 525 0593
                                            </span>
                                        </a>
                                    </cite>
                                    <ul class="list list-mark">
                                        <li>Giá xe Ford tốt nhất thị trường.</li>
                                        <li>Nhiều khuyến mãi và ưu đãi nhất.</li>
                                        <li>Trả góp lãi suất thấp nhất.</li>
                                    </ul>
                                </blockquote>
                                <a class="btn btn-standard dang-ky-button" href="<%= erp_giafordhcm.registration_form_path(type: 'test_drive') %>">Đăng ký lái thử</a>
                            </div>
                        </div>
                        
                        <form class="b-calculator">
                            <div class="b-calculator__header"><i class="icon flaticon-calculator text-primary"></i>
                                <div class="b-calculator__header-inner">
                                    <div class="b-calculator__name">Đăng ký báo giá mua xe</div>
                                    <div class="b-calculator__info">Hãy gửi yêu cầu vào mẫu bên dưới</div>
                                </div>
                            </div>
                            <div class="b-calculator__group">
                                <div class="b-calculator__label">Họ & tên</div>
                                <input class="b-calculator__input form-control" type="text" placeholder="Nhập thông tin họ & tên" />
                            </div>
                            <div class="b-calculator__group">
                                <div class="b-calculator__label">Số điện thoại</div>
                                <input class="b-calculator__input form-control" type="text" placeholder="Nhập đúng số điện thoại" />
                            </div>
                            <div class="b-calculator__group">
                                <div class="b-calculator__label">Tỉnh/TP</div>
                                <input class="b-calculator__input form-control" type="text" placeholder="VD: Thành phố Hồ Chí Minh" />
                            </div>
                            <div class="b-calculator__group">
                                <div class="b-calculator__label">Hình thức thanh toán</div>
                                <input class="b-calculator__input form-control" type="text" placeholder="Trả góp/Trả hết" />
                            </div>
                            <button class="btn btn-dark">Xác nhận & gửi</button>
                        </form>
                        
                    </div>
                </aside>
            </div>
        </div>
    </div>
    
    <% related_products = @menu.get_products_for_categories(exclude_product_id: @product.id) %>
    <% if related_products.present? %>
    <section class="section-default">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <h2 class="ui-title-block">SẢN PHẨM CÙNG LOẠI</h2>
                    <div class="ui-decor"></div>
                    <div class="related-carousel owl-carousel owl-theme owl-theme_w-btn enable-owl-carousel"
                        data-min768="2" data-min992="3" data-min1200="3" data-margin="30"
                        data-pagination="false" data-navigation="true" data-auto-play="4000"
                        data-stop-on-hover="true"
                    >
                        <% related_products.each do |related_product| %>
                            <div class="b-goods-feat">
                                <div class="b-goods-feat__wrap">
                                    <div class="b-goods-feat__img">
                                        <%= link_to image_tag(product_image(related_product.product_images, 'first', 'thumb560x350'), alt: related_product.product_name, class: "img-responsive"), product_link(related_product), title: related_product.product_name %>
                                    </div>
                                    <div class="b-goods-feat__inner">
                                        <div class="b-goods-feat__info">
                                            <a href="<%= product_link(related_product) %>">
                                                <div class="b-goods-feat__name"><%= related_product.name %></div>
                                            </a>
                                        </div>
                                        <div class="b-goods-ac__price">Giá tham khảo: <span><%= format_price(related_product.price) %></span><sup></sup></div>
                                        <div class="b-goods-ac__price discount">Liên hệ: <span>0905 250 593</span> để nhận giá ưu đãi trong tháng</div>
                                    </div>
                                </div>
                            </div>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <% end %>
</main>