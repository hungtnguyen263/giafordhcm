<div class="section-title-page area-bg area-bg_dark area-bg_op_70">
    <div class="area-bg__inner">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <h1 class="b-title-page bg-primary_a">Sản phẩm</h1>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end .b-title-page-->

<div class="bg-grey">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <ol class="breadcrumb">
                    <li><a href="<%= erp_giafordhcm.root_path %>"><i class="icon fa fa-home"></i></a>
                    </li>
                    <li class="active">Sản phẩm</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<!-- end breadcrumb-->

<section class="section-default">
    <div class="container">
        <div class="row">
            <div class="col-md-9">
                <% @menus.each do |menu| %>
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="text-center">
                                <h2 class="ui-title-block text-uppercase">
                                    - <%= menu.name %> -
                                    <span>HOTLINE <a href="tel:0905250593" class="telto">090 525 0593</a></span>
                                </h2>
                                <div class="ui-subtitle-block"><%= menu.description %></div>
                                <div class="ui-decor"></div>
                            </div>
                        </div>
                    </div>
                    <div class="goods-group wrap-inl-block">
                        <div class="row">
                            <% menu.get_products_for_categories(params).each do |product| %>
                                <div class="col-md-4 col-sm-6">
                                    <div class="b-goods-ac">
                                        <div class="b-goods-ac__wrap">
                                            <div class="b-goods-ac__img">
                                                <!--560x350-->
                                                <%= link_to image_tag(product_image(product.product_images, 'first', 'thumb560x350'), alt: product.product_name, class: "img-responsive img-fullwidth"),
                                                    product_link(product), title: product.product_name %>
                                            </div>
                                            <div class="b-goods-ac__inner">
                                                <div class="b-goods-ac__info">
                                                    <a href="<%= product_link(product) %>">
                                                        <div class="b-goods-ac__name"><%= product.name %></div>
                                                    </a>
                                                </div>
                                                <div class="b-goods-ac__price">Giá tham khảo: <span><%= format_price(product.price) %></span><sup></sup></div>
                                                <div class="b-goods-ac__price discount">Liên hệ: <span>0905 250 593</span> để nhận giá ưu đãi trong tháng</div>
                                                <!--<div class="b-goods-ac__price discount">Giảm thêm (tháng 6): <span>30.000.000</span><sup>VNĐ</sup></div>-->
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            <% end %>
                        </div>
                    </div>
                <% end %>
            </div>
            <div class="col-md-3">
                <%= render "erp/giafordhcm/frontend/modules/contact_info_boxes", fixed: true %>
            </div>
        </div>
    </div>
</section>