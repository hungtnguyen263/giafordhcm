    <body>
        <% @web_info = Erp::Contacts::Contact.get_main_contact %>
        <!-- Loader-->
        <div id="page-preloader"><span class="spinner border-t_second_b border-t_prim_a"></span>
        </div>
        <!-- Loader end-->
        <%= render "layouts/erp/frontend/modules/mobile_slidebar" %>
        <div class="l-theme animated-css" data-header="sticky" data-header-top="200" data-canvas="container"><!--.l-theme-custom-->
            <%= render "layouts/erp/frontend/modules/header", web_info: @web_info %>
            
            <%= yield %>
            
            <%= render "layouts/erp/frontend/modules/footer", web_info: @web_info %>
            
            <aside class="floating">
                <div class="contact-boxes">
                    <a class="call-me" href="tel:<%= @web_info.phone %>"><%= @web_info.phone %></a>
                    <a class="open-link dang-ky-button" href="<%= erp_giafordhcm.registration_form_path(type: 'quote') %>">Nhận báo giá</a>
                </div>
            </aside>
        </div>
        <!-- end layout-theme-->
        
        <%= render "layouts/erp/frontend/modules/main_script" %>
        
        <% if false %>
        <!-- Load Facebook SDK for JavaScript -->
        <div id="fb-root"></div>
        <script>
            window.fbAsyncInit = function() {
                FB.init({
                    xfbml            : true,
                    version          : 'v3.3'
                });
            };
          
            (function(d, s, id) {
                var js, fjs = d.getElementsByTagName(s)[0];
                if (d.getElementById(id)) return;
                js = d.createElement(s); js.id = id;
                js.src = 'https://connect.facebook.net/vi_VN/sdk/xfbml.customerchat.js';
                fjs.parentNode.insertBefore(js, fjs);
            }(document, 'script', 'facebook-jssdk'));
        </script>
        
        <!-- Your customer chat code -->
        <div class="fb-customerchat"
            attribution=setup_tool
            page_id="341016306770284"
            theme_color="#ff7e29"
            logged_in_greeting="Chào mừng bạn đến với Gia Định Ford. Hãy liên hệ để nhận tư vấn + báo giá về xe."
            logged_out_greeting="Chào mừng bạn đến với Gia Định Ford. Hãy liên hệ để nhận tư vấn + báo giá về xe."
            greeting_dialog_delay="10"
        >
        </div>
        <% end %>
    </body>

