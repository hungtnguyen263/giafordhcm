<script>    
    $(document).on('click', '.header-navibox-contact .contact-info-toggle', function(e) {
        $(this).addClass("open");
        $(this).closest(".header-navibox-contact").find(".contact-info-content").addClass("block");
    });
    
    $(document).on('click', '.header-navibox-contact .contact-info-toggle.open', function(e) {
        $(this).removeClass("open");
        $(this).closest(".header-navibox-contact").find(".contact-info-content").removeClass("block");
    });
</script>

<script>
    var dang_ky_modal = new giafordhcmModal({size: 'md'});
    var dang_ky_callback;
    
    $(function() {
        $('.sidebar-toggle').click();
        $('.dang-ky-button').click(function(e) {
            e.preventDefault();
            var button = $(this);
            
            dang_ky_modal.load(button.attr('href'));
            
            dang_ky_callback = function(response) {
                if (typeof(response.status) !== 'undefined') {
                    showNotification(response.status, response.message);
                    // hide modal
                    dang_ky_modal.hide();
                    
                    location.reload();
                } else if (typeof(response.redirect) !== 'undefined') {
                    window.location = response.redirect;
                    alert("Cảm ơn Quý vị đã gửi yêu cầu. Chúng tôi sẽ sớm liên hệ lại với Quý vị.")
                } else {
                    // validation error
                    dang_ky_modal.renderHtml(response);
                }
            };
        });
    });
</script>

